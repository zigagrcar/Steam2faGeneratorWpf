<Window x:Class="Steam2faGeneratorWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Steam2faGeneratorWpf"
        mc:Ignorable="d"
        Title="Steam2faGenerator" Height="350" Width="300">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Height="40" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="200" Margin="44,93,48,0" FontSize="24"/>
        <Label x:Name="label" Content="Generated code" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="44,51,0,0" Width="200" FontSize="18.667"/>
        <Button x:Name="bCopy" Content="Copy" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="44,155,0,0" Height="40" Click="bCopy_Click" FontSize="18.667"/>
        <Button x:Name="bExit" Content="Exit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="44,246,0,0" Height="40" Click="bExit_Click" FontSize="18.667"/>

    </Grid>
</Window>
